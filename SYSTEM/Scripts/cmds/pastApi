const MAPI = 'https://past.ma-pro.repl.co';
const axios = require('axios');
const fs = require('fs');
const path = require('path');

module.exports = {
  config: {
    name: 'past',
    author: 'Allou Mohamed',
    version: '1.0.0',
    role: 3,
    category: 'Ø§Ù„Ù…Ø·ÙˆØ±',
    guide: '{pn} code name',
    price: 0,
    reward: 0,
    description: 'past codes ğŸŒ',
    inbox: true
  },
  atCall: async function({ message, event, args }) {
    try {
      const fileName = args[0];
      const filePath = path.join(__dirname, `${fileName}.js`);

      const code = fs.readFileSync(filePath, 'utf8');

      const res = await axios.get(`${MAPI}/past?code=${encodeURIComponent(code)}`);
      message.reply(`âœ… | Done Poteto ğŸŒ\nğŸ”— | ${res.data.Url}`);
    } catch (poteto) {
    message.reply(poteto.message);
    }
  }
};
